---
import Nav from "../components/Nav";
import Head from "../components/Head.astro";
import StringWrapper from "../components/StringWrapper.astro";

export interface Props {
  title: string;
  headline: string;
  bold_headline: string;
  description?: string;
}

const {
  title,
  headline,
  description = "Personal website of Nadav Port",
} = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main>
      <Nav client:load />
      <h1
        class="title text-3xl flex flex-col-reverse md:flex-row justify-center items-center"
      >
      <Fragment set:html={headline} />
    </h1>
          
      <div
        class="flex flex-col-reverse md:flex-row justify-center items-center"
      >
        <div class="w-[350px] md:w-[750px] my-7">
          <slot />
        </div>
      </div>
    </main>
    <style>
      .title {
        animation: fadeInAnimation ease 3s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
      }
      @keyframes fadeInAnimation {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }
    </style>
  </body>
</html>
